{{! Use the main layout }}
{{!< main }}

<div class="profile-container">
    <div class="profile-avatar">
        <img src="/avatar/{{user.username}}" alt="User's Avatar" class="avatar">
    </div>
    
    <section class="profile-info">
        <!-- user profile info -->
        <h2>User Profile</h2>
        <p><b>Username:</b> {{user.username}}</p>
        <p><b>Member since:</b> {{user.memberSince}}</p>
    </section>
    <form action="/profile" method="POST">
        <div class="profile-theme">
            <label for="theme">Choose Your Theme:</label>
            <select name="theme" class="theme">
                <option value="default">Astral Express</option>
                <option value="pink">Divination Commission</option>
                <option value="blue">Vidyadhara</option>
                <option value="dark">Nihility</option>
            </select>
            <button type="submit" class="theme-button">Change</button>
        </div>
    </form>
</div>

<!-- list of all the current user's posts -->
<section class="user-posts">

    <h2>Your {{{postNeoType}}}s</h2>
    
    {{#if posts.length}}
        <ul>
            {{#each posts}}
                {{> post this user=../user}}
            {{/each}}
        </ul>
    {{else}}
        <p>- Nothing to see here. C'mon, do something. The trail is not gonna blaze itself. -</p>
    {{/if}}

</section>