{{! Use the main layout }}
{{!< main }}

<div class="profile-container">
    <div class="profile-avatar">
        <img src="/avatar/{{user.username}}" alt="User's Avatar" class="avatar">
    </div>
    
    <section class="profile-info">
        <!-- user profile info -->
        <h2>User Profile</h2>
        <p><b>Username:</b> {{user.username}}</p>
        <p><b>Member since:</b> {{user.memberSince}}</p>
    </section>
</div>

<!-- list of all the current user's posts -->
<section class="user-posts">

    <h2>Your {{{postNeoType}}}s</h2>
    
    {{#if posts.length}}
        <ul>
            {{#each posts}}
                {{> post this user=../user}}
            {{/each}}
        </ul>
    {{else}}
        <p>- Nothing to see here. C'mon, do something. The trail is not gonna blaze itself. -</p>
    {{/if}}

</section>